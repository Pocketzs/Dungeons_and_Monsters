<h1>Update <%= @dungeon.name %></h1>

<%= form_with model: @dungeon, url: "/dungeons/#{@dungeon.id}", method: :patch, local: true  do |form|  %>
  <%= form.label :name%>
  <%= form.text_field :name%><br>
  <%= form.label :kind, "Type"%>
  <%= form.select :kind, ['Cave', 'Mine', 'Dwemer Ruins', 'Fort', 'Nordic Tower', 'Nordic Tomb']%><br>
  <%= form.label :hold%>
  <%= form.select :hold, ['Eastmarch', 'Falkreath Hold', 'Haafingar', 'Hjaalmarch', 'The Pale', 'The Reach', 'The Rift', 'Whiterun', 'Winterhold']%><br>
  <%= form.label :cleared, "Cleared?"%>
  <%= form.select :cleared, [true, false] %><br>
  <%= form.label :visit_count, "Visit Count" %>
  <%= form.number_field :visit_count %><br>
  <br>
  <%= form.submit "Confirm Update" %>
<% end %>
